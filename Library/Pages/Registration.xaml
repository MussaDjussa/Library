<Page x:Class="Library.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label Content="Фамилия"/>
            <TextBox x:Name="surname" Width="220" Height="40"/>
            <Label Content="Имя" />
            <TextBox x:Name="name" Height="40" Width="220"/>
            <Label Content="Отчество"/>
            <TextBox x:Name="patronymic" Width="220" Height="40"/>
            <Label Content="Телефон"/>
            <TextBox x:Name="phone" Width="220" Height="40"/>
            <Label Content="Адресс"/>
            <TextBox x:Name="adress" Width="220" Height="40"/>
            <Button Click="Button_Click_2" Width="220" Height="40"
                    Content="Зарегистрироваться"
                    />
            <Button Content="Назад"
                    Click="Button_Click" Width="220" Height="40"
                    Margin="10"/>
        </StackPanel>

    </Grid>
</Page>
